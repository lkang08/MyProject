<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PermissionTestActivity">

    <Button
        android:id="@+id/sureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Load"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/test11"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sureBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lk.myproject.widget.CustomLayout
            android:layout_width="200dp"
            android:id="@+id/l11"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="【集合啦，yy森友会！】 欢聚集团十五周年庆！ 微博话题排行活动专区正式开启！ 不用钓鲈鱼！不用买大头菜！ 参与话题#我与yy的故事# 点赞数前100即有100%中奖的抽奖机会！ 各种礼盒和限量周边拿到手软！ 点赞前10直接加送价值100元京东卡！ 赶紧登录微博写出你的走心故事~"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_heart"
                android:background="#3e95ec" />
        </com.lk.myproject.widget.CustomLayout>

        <com.lk.myproject.widget.textview.ViewFollowTextViewLayout
            android:layout_width="200dp"
            android:layout_below="@+id/l11"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTest"
                android:layout_width="200dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="【集合啦，yy森友会！】"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_heart"
                android:background="#3e95ec" />
        </com.lk.myproject.widget.textview.ViewFollowTextViewLayout>
    </RelativeLayout>

    <com.lk.myproject.widget.MyRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test11" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView">

        <FrameLayout
            android:id="@+id/testLayout1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout1">

        <FrameLayout
            android:id="@+id/testLayout11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout14"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout2">

        <FrameLayout
            android:id="@+id/testLayout21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout22"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout23"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>

        <FrameLayout
            android:id="@+id/testLayout24"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"></FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>