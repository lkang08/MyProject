<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1F1F7">

    <FrameLayout
        android:id="@+id/lyTop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ececec"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:text="取消"
            android:textColor="#0080fe"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="选择日期"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="确定"
            android:textColor="#0080fe"
            android:textSize="15sp"
            android:textStyle="bold" />
    </FrameLayout>

    <RadioGroup
        android:id="@+id/timeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/lyTop">

        <RadioButton
            android:id="@+id/rbFrom"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="开始日期"
            style="@style/CustomRadioBtn2"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="到"
            android:textColor="#333333"
            android:textSize="13sp" />

        <RadioButton
            android:id="@+id/rbTo"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginRight="40dp"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="结束日期"
            android:textSize="17sp"
            style="@style/CustomRadioBtn2"
            android:textStyle="bold" />
    </RadioGroup>

    <DatePicker
        android:id="@+id/fromDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:calendarViewShown="false"
        android:layout_marginTop="10dp"
        android:datePickerMode="spinner"
        android:visibility="visible"
        android:theme="@style/Theme.picker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeGroup" />

    <DatePicker
        android:id="@+id/toDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:calendarViewShown="false"
        android:layout_marginTop="10dp"
        android:datePickerMode="spinner"
        android:theme="@style/Theme.picker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/timeGroup" />
</android.support.constraint.ConstraintLayout>
